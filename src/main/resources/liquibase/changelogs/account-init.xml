<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="account-init" author="jinx">
        <createTable tableName="tb_account" remarks="账号">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(255)" remarks="账号"/>
            <column name="password" type="VARCHAR(255)" remarks="密码"/>
            <column name="status" type="VARCHAR(255)" remarks="状态（ENABLE 正常, DISABLE 关闭, FORBIDDEN 禁用）"/>
            <column name="user_id" type="BIGINT" remarks="用户id（tb_user）"/>

            <column name="create_at" type="DATETIME" remarks="创建时间"/>
            <column name="create_by" type="VARCHAR(255)" remarks="创建人"/>
            <column name="modify_at" type="DATETIME" remarks="修改时间"/>
            <column name="modify_by" type="VARCHAR(255)" remarks="修改人"/>
            <column name="is_deleted" type="TINYINT(1)" defaultValue="0" remarks="逻辑删除（1 已删除 0 未删除）"/>
        </createTable>

        <insert tableName="tb_account">
            <column name="username" value="88888888"/>
            <column name="password" value="{noop}123456"/>
            <column name="status" value="ENABLE"/>
            <column name="user_id" value="1"/>
            <column name="create_at" valueComputed="NOW()"/>
            <column name="create_by" value="system"/>
        </insert>
    </changeSet>

</databaseChangeLog>
