<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="token-init" author="jinx">
        <createTable tableName="tb_token" remarks="凭证">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(255)" remarks="凭证类型（eg：Bearer）"/>
            <column name="access_token" type="VARCHAR(255)" remarks="访问凭证"/>
            <column name="refresh_token" type="VARCHAR(255)" remarks="刷新凭证"/>
            <column name="access_expire_at" type="DATETIME" remarks="访问凭证过期时间"/>
            <column name="refresh_expire_at" type="DATETIME" remarks="刷新凭证过期时间"/>
            <column name="user_id" type="BIGINT" remarks="用户id（tb_user）"/>

            <column name="create_at" type="DATETIME" remarks="创建时间"/>
            <column name="create_by" type="VARCHAR(255)" remarks="创建人"/>
            <column name="modify_at" type="DATETIME" remarks="修改时间"/>
            <column name="modify_by" type="VARCHAR(255)" remarks="修改人"/>
            <column name="is_deleted" type="TINYINT(1)" defaultValue="0" remarks="逻辑删除（1 已删除 0 未删除）"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
